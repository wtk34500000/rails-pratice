 <div class="container">
    <h1 class="text-center">Edit Order Form</h1>

    <%= form_for @order do |f|%>
        <div class="form-group row">
            <%= f.text_field :title, id:"inputTitle", value: @order.title,  placeholder: "Work Order Title", class: "form-control" %>
        </div>
        <div class="form-group row">
            <%= f.text_area :description, value: @order.description, id:"inputDescription", placeholder: "Work Order Descriptio", class: "form-control" %>
        </div>
        <div class="form-group row">
            <%= f.date_field :deadline, value: @order.deadline, class: "form-control"%>
        </div>
        <div class="form-group row">
            <%= f.select :workerId, options_for_select(@workers.collect{|worker| [worker.name, worker.id]}), {:multiple => :multiple, :size => 5}, class: "form-control"%>
        </div>
        <div class="form-group row">
            <%= f.submit "Update Work Order", class: "btn btn-large btn-primary" %>
        </div>
    <% end %>
</div>
<div class="container">
    <h1 class="text-center">Work Order List: </h1>
    <table border="1" class="container">
        <tr>
            <th>Title</th>
            <th>Description</th> 
            <th>Deadline</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
            <% @orders.sort.each do |order|%>
                    <tr >
                        <td><%= link_to order.title, order_path(order.id) %></td>
                        <td><%= order.description%> </td> 
                        <td><%= order.deadline%> </td>
                        <td><%= link_to "EDIT", edit_order_url(order.id), class: "text-warning" %></td>
                        <td><%= link_to "DELTE", order_path(order), :method => :delete, data: {confirm: "Are you sure?"}, class: "text-danger"%></td>
                    </tr>
            <% end if @orders %>
    </table>

    <br><br>
    <%= link_to "Add Work Order", "/orders/new", class: "btn btn-lage btn-primary" %>
    <%= link_to "Add Worker", "/workers/new", class: "btn btn-lage btn-danger" %>

</div>